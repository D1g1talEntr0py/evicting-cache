{
	"env": {
		"browser": true,
		"es2024": true,
		"node": true,
		"jest": true
	},
	"plugins": ["compat", "jsdoc"],
	"extends": ["eslint:recommended", "plugin:compat/recommended", "plugin:jsdoc/recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"jsdoc/tag-lines": 0,
		"jsdoc/no-defaults": 0,
		"no-prototype-builtins": "off",
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always",
			{	"omitLastInOneLineBlock": true }
		]
	},
	"settings": {
		"jsdoc": {
			"preferredTypes": {
				"object": "Object"
			},
			"structuredTags": {
				"template": {
					"name": "namepath-defining",
					"type": false
				}
			},
			"tagNamePreference": {
				"augments": {
					"message": "@extends is to be used over @augments as it is more evocative of classes than @augments",
					"replacement": "extends"
				}
			}
		}
	}
}